# Editor configuration, see http://editorconfig.org
root = true

[*.{js, ts, json, tsx, jsx, html, xhtml}]
charset = utf-8
end_of_line = lfs
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.rs]
indent_size = 4
indent_style = space
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
